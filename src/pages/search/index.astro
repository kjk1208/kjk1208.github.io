---
import BaseLayout from '../../layouts/BaseLayout.astro';
---
<BaseLayout title="검색">
  <h1>검색</h1>
  <div id="search" class="card"></div>
  <script src="/pagefind/pagefind-ui.js" type="text/javascript"></script>
  <link href="/pagefind/pagefind-ui.css" rel="stylesheet" />
  <script>
    window.addEventListener('DOMContentLoaded', () => {
      try { new PagefindUI({ element: "#search", showImages: false }); }
      catch(e) { document.getElementById('search').innerHTML = '<p class="small">검색 인덱스가 아직 생성되지 않았습니다.</p>'; }
    });
  </script>
</BaseLayout>
